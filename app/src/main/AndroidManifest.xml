<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.example.deadspace">

    <uses-permission android:name="android.permission.INTERNET"/>

    <dist:module dist:instant="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DeadSpace">
        <activity
            android:name=".ui.schedule.add.AddScheduleActivity"/>
        <activity
            android:name=".ui.schedule.main.ScheduleActivity" />
        <activity
            android:name=".ui.deadlines.add.AddDeadlineActivity" />
        <activity
            android:name=".ui.exams.ExamActivity" />
        <activity
            android:name=".ui.deadlines.main.DeadlinesActivity" />
        <activity
            android:name=".ui.start.StartActivity"
            android:theme="@style/Theme.DeadSpace.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>