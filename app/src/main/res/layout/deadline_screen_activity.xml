<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дедлайны"
            android:textColor="@color/suai_dark_blue"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/Right_arrow"
            android:layout_width="50dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/Стрелка_вправо"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@color/white"/>

        <ImageButton
            android:id="@+id/Plus"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/Плюсик"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="350dp"
            android:background="@color/white"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:selectedWeekBackgroundColor="@color/white"
        android:firstDayOfWeek="2"
        android:maxDate="01/01/2023"
        android:minDate="01/09/2020" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/Фон_для_даты_в_календаре"
            android:layout_marginTop="290dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/CurrentDateDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="165dp"
            android:text="@string/currentDateDay"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/CurrentDateMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="@+id/CurrentDateDay"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="195dp"
            android:text="@string/currentDateMonth"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="380dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/Фон_для_дедлайна"
        android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/NameDedline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="25dp"
            android:text="Лабораторная работа №1"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/NameSubjectDedline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:text="Электроника"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/DataDedline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="290dp"
            android:text="1 сентября"
            android:textColor="@color/suai_red"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/RedSquare"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/Красный_квадрат"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="25dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="380dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/Фон_для_дедлайна"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/NameDedline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="25dp"
            android:text="Лабораторная работа №2"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/NameSubjectDedline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:text="Электроника"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/DataDedline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="290dp"
            android:text="1 октября"
            android:textColor="@color/suai_red"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/RedSquare"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/Красный_квадрат"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="25dp"/>

    </RelativeLayout>

</LinearLayout>