<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.deadspace.ui.schedule.main.ScheduleViewModel" />
    </data>

     <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/relativeLayout_01"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:padding="@dimen/all_padding">

            <TextView
                android:id="@+id/schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Расписание занятий"
                android:textColor="@color/suai_dark_blue"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/Right_arrow"
                android:layout_width="12dp"
                android:layout_height="24dp"
                android:background="@color/white"
                android:onClick="onClickBackListRasp"
                android:scaleType="fitStart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/right_arrow" />

        <TextView
            android:id="@+id/costil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="T"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/schedule" />


            <TextView
                android:id="@+id/EnterGroupNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/enterGroupNumber"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/costil" />

            <SearchView
                android:id="@+id/name_group_input"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:iconifiedByDefault="false"
                app:layout_constraintBottom_toBottomOf="@id/EnterGroupNumber"
                app:layout_constraintStart_toEndOf="@id/EnterGroupNumber" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/is_users_switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:checked="@{viewModel.isUsers}"
            android:onCheckedChanged="@{ (button, bool) ->  viewModel.onChangeIsUser(bool)}"
            android:text="Ваше расписание"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_group_input" />

            <TextView
                android:id="@+id/current_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 июня"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@id/imageView_2"
                app:layout_constraintTop_toBottomOf="@id/is_users_switcher" />

            <ImageButton
                android:id="@+id/imageView_2"
                android:layout_width="100dp"
                android:layout_height="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/is_users_switcher"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/background_of_red_week"
                android:scaleType="fitCenter"
                android:background="@color/white"
                android:onClick="@{() -> viewModel.onChangeWeekType()}"/>

            <TextView
                android:id="@+id/name_of_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.weekText}"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/is_users_switcher"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/imageView_2"
                app:layout_constraintTop_toBottomOf="@id/is_users_switcher"
                android:text="неделя"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:id="@+id/background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/suai_dark_blue"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_of_week">

                <TextView
                    android:id="@+id/monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Пн"
                    android:textColor="@{viewModel.colors[0]}"
                    android:textSize="20sp"
                    android:clickable="true"
                    android:onClick="@{() -> viewModel.onClickWeekDay(0)}"/>

                <TextView
                    android:id="@+id/tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Вт"
                    android:textColor="@{viewModel.colors[1]}"
                    android:textSize="20sp"
                    android:clickable="true"
                    android:onClick="@{() -> viewModel.onClickWeekDay(1)}"/>

                <TextView
                    android:id="@+id/wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Ср"
                    android:textColor="@{viewModel.colors[2]}"
                    android:textSize="20sp"
                    android:clickable="true"
                    android:onClick="@{() -> viewModel.onClickWeekDay(2)}"/>

                <TextView
                    android:id="@+id/thursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Чт"
                    android:textColor="@{viewModel.colors[3]}"
                    android:textSize="20sp"
                    android:clickable="true"
                    android:onClick="@{() -> viewModel.onClickWeekDay(3)}"/>

                <TextView
                    android:id="@+id/friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Пт"
                    android:textColor="@{viewModel.colors[4]}"
                    android:textSize="20sp"
                    android:clickable="true"
                    android:onClick="@{() -> viewModel.onClickWeekDay(4)}"/>

                <TextView
                    android:id="@+id/saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Сб"
                    android:textColor="@{viewModel.colors[5]}"
                    android:textSize="20sp"
                    android:clickable="true"
                    android:onClick="@{() -> viewModel.onClickWeekDay(5)}"/>

                <TextView
                    android:id="@+id/all_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="..."
                    android:textColor="@{viewModel.colors[6]}"
                    android:textSize="20sp"
                    android:clickable="true"
                    android:onClick="@{() -> viewModel.onClickWeekDay(6)}"/>

        </LinearLayout>

         <ProgressBar
             android:id="@+id/load_spinner"
             android:visibility="gone"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@id/background"
             app:layout_constraintEnd_toEndOf="parent" />

         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/pair_list"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@id/background"
             android:layout_marginBottom="10dp"
             tools:listitem="@layout/schedule_list_item" />

         <ImageButton
             android:id="@+id/imageView5"
             android:layout_width="182dp"
             android:layout_height="30dp"
             android:scaleType="fitStart"
             android:background="@color/white"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:srcCompat="@drawable/background_add_click_button"
             android:onClick="onClickAddRasp" />

         <TextView
             android:id="@+id/textView5"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintStart_toStartOf="@id/imageView5"
             app:layout_constraintEnd_toEndOf="@id/imageView5"
             app:layout_constraintTop_toTopOf="@id/imageView5"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:textStyle="bold"
             android:text="Добавить занятие" />

     </androidx.constraintlayout.widget.ConstraintLayout>

</layout>