<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pair_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/suai_light_blue"
    android:padding="@dimen/all_padding">

    <ImageButton
        android:id="@+id/schedule_item_delete_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/close" />

    <TextView
        android:id="@+id/schedule_item_type"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:fontFamily="@font/exo_2_bold"
        android:text="ЛP"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/schedule_item_number"
        app:layout_constraintStart_toStartOf="@id/schedule_item_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/schedule_item_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/exo_2_bold"
        android:text="Электроника"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/schedule_item_type"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/schedule_item_number"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fontFamily="@font/exo_2_bold"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/schedule_item_type" />

    <TextView
        android:id="@+id/schedule_item_building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/exo_2"
        android:text="Гаст."
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/schedule_item_type"
        app:layout_constraintTop_toBottomOf="@id/schedule_item_name" />

    <TextView
        android:id="@+id/schedule_item_auditorium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/exo_2"
        android:text="33-05"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/schedule_item_building"
        app:layout_constraintTop_toTopOf="@id/schedule_item_building" />

    <TextView
        android:id="@+id/schedule_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_2"
        android:text="10:30-12:00"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/schedule_item_building"
        app:layout_constraintTop_toBottomOf="@id/schedule_item_building" />

</androidx.constraintlayout.widget.ConstraintLayout>