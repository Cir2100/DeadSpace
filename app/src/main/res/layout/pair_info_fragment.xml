<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/close_pair_info_fragment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/close" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pair_info_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/close_pair_info_fragment">

        <TextView
            android:id="@+id/pair_info_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ЛР"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/pair_info_disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Электроника"
            android:maxLines="1"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@id/pair_info_type"
            app:layout_constraintTop_toTopOf="@id/pair_info_type"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pair_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pair_info_1">

    <TextView
        android:id="@+id/pair_info_less"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/pair_info_pair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="пара"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/pair_info_less"
        app:layout_constraintBottom_toBottomOf="@id/pair_info_less"/>

        <TextView
            android:id="@+id/pair_info_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00-10:00"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@id/pair_info_pair"
            app:layout_constraintBottom_toBottomOf="@id/pair_info_pair"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/building_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Корпус:"
        android:maxLines="1"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pair_info"/>

    <TextView
        android:id="@+id/auditorium_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Аудитория:"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/building_textView"
        app:layout_constraintTop_toBottomOf="@id/building_textView"/>

    <TextView
        android:id="@+id/groups_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Группы:"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/auditorium_textView"
        app:layout_constraintTop_toBottomOf="@id/auditorium_textView"/>

    <TextView
        android:id="@+id/teachers_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Преподаватели:"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/groups_textView"
        app:layout_constraintTop_toBottomOf="@id/groups_textView"/>

    <TextView
        android:id="@+id/pair_info_building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Гаст"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/pair_info_teachers"
        app:layout_constraintTop_toTopOf="@id/building_textView"/>

    <TextView
        android:id="@+id/pair_info_auditorium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13-11"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/pair_info_teachers"
        app:layout_constraintTop_toTopOf="@id/auditorium_textView"/>


    <TextView
        android:id="@+id/pair_info_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1942"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/pair_info_teachers"
        app:layout_constraintTop_toTopOf="@id/groups_textView"/>


    <TextView
        android:id="@+id/pair_info_teachers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Яблоков"
        android:maxLines="1"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/teachers_textView"
        app:layout_constraintTop_toTopOf="@id/teachers_textView"/>


</androidx.constraintlayout.widget.ConstraintLayout>