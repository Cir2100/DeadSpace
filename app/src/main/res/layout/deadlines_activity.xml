<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout_0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/Navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дедлайны"
            android:textColor="@color/suai_dark_blue"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/Right_arrow"
            android:layout_width="12dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/right_arrow"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="25dp"
            android:scaleType="fitStart"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:onClick="onClickBackListDeadlines"/>

        <ImageButton
            android:id="@+id/Plus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/plus"
            android:layout_marginRight="25dp"
            android:background="@color/white"
            android:layout_alignParentRight="true"
            android:scaleType="fitStart"
            android:layout_centerVertical="true"
            android:onClick="onClickAddDeadline"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/dfghjk"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/background_kalendar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/CurrentDateDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165dp"
            android:text="@string/currentDateDay"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/CurrentDateMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="@+id/CurrentDateDay"
            android:layout_marginLeft="195dp"
            android:text="@string/currentDateMonth"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


        <LinearLayout
            android:id="@+id/big_deadline_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/deadline_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginHorizontal="3dp"
                app:layout_constraintTop_toBottomOf="@id/big_deadline_list"
                tools:listitem="@layout/deadline_list_item"/>

        </LinearLayout>

</LinearLayout>