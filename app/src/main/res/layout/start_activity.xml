<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background_grad_and_vector"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/Number"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fon_ellips" />

    <TextView
        android:id="@+id/current_date_day"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/exo_2_black"
        android:text="30"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/imageView3"
        app:layout_constraintTop_toTopOf="@id/imageView3" />

    <TextView
        android:id="@+id/current_date_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_2_black"
        android:text="июня"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/current_date_day"
        app:layout_constraintTop_toBottomOf="@id/current_date_day" />

    <TextView
        android:id="@+id/current_weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_2_light"
        android:text="@string/currentDayOfWeek"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/current_date_month"
        app:layout_constraintTop_toBottomOf="@id/current_date_month" />

    <ImageView
        android:id="@+id/week_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="@id/imageView3"
        app:layout_constraintBottom_toBottomOf="@id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/Number"
        app:srcCompat="@drawable/backround_blue_week" />

    <TextView
        android:id="@+id/week_type_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/exo_2"
        android:text="нижняя\nнеделя"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/week_image"
        app:layout_constraintEnd_toEndOf="@id/week_image"
        app:layout_constraintTop_toTopOf="@id/week_image" />

    <TextView
        android:id="@+id/Number"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/exo_2_black"
        android:text="@string/number"
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textSize="90sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_2_black"
        android:text="@string/lesson"
        android:textColor="@color/purple_500"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Number" />

    <TextView
        android:id="@+id/time_pair_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/exo_2"
        android:text="11:10 - 12:40"
        android:textColor="@color/suai_purple"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Lesson" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:layout_constraintBottom_toBottomOf="parent">

    <ImageButton
        android:id="@+id/ListDeadlines"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginVertical="10dp"
        android:background="@color/white"
        android:onClick="onClickListDeadlines"
        android:scaleType="centerInside"
        android:src="@drawable/background_list_deadlines" />

    <ImageButton
        android:id="@+id/schedule_image"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginVertical="10dp"
        android:background="@color/white"
        android:onClick="onClickPairs"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/image_schedule_button_big" />

    <ImageButton
        android:id="@+id/exams_image"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginVertical="10dp"
        android:background="@color/suai_light_blue"
        android:onClick="onClickTest"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/image_exams_button_big" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView3">

        <TextView
            android:id="@+id/textView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="75dp"
            android:fontFamily="@font/exo_2"
            android:gravity="center_vertical"
            android:text="Список\nдедлайнов"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="75dp"
            android:fontFamily="@font/exo_2"
            android:gravity="center_vertical"
            android:text="Занятия"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="75dp"
            android:fontFamily="@font/exo_2"
            android:gravity="center_vertical"
            android:text="Сессия"
            android:textColor="@color/black"
            android:textSize="22sp" />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>


