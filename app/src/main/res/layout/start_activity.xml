<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fon_ellips" />

        <TextView
            android:id="@+id/CurrentDateDay"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            app:layout_constraintTop_toTopOf="@id/imageView3"
            app:layout_constraintStart_toStartOf="@id/imageView3"
            android:layout_marginStart="10dp"
            android:text="30"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/CurrentDateMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/CurrentDateDay"
        app:layout_constraintStart_toStartOf="@id/CurrentDateDay"
        android:text="июня"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/CurrentDayOfWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/CurrentDateMonth"
            app:layout_constraintStart_toStartOf="@id/CurrentDateMonth"
            android:text="@string/currentDayOfWeek"
            android:textColor="@color/white"
            android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="180dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="@id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/backround_blue_week" />

    <TextView
        android:id="@+id/week_type_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imageView4"
        app:layout_constraintBottom_toBottomOf="@id/imageView4"
        app:layout_constraintEnd_toEndOf="@id/imageView4"
        android:layout_marginEnd="5dp"
        android:textAlignment="textEnd"
        android:text="нижняя\nнеделя"
        android:textColor="@color/white"
        android:textSize="20sp" />

        <TextView
            android:id="@+id/Number"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/number"
            android:textColor="@color/purple_500"
            android:textSize="90sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/lesson"
            android:textColor="@color/purple_500"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time_pair_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Lesson"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="11:10 - 12:40"
            android:textColor="@color/suai_purple"
            android:textSize="10sp"
            android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/ListDeadlines"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/time_pair_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerInside"
        android:src="@drawable/background_list_deadlines"
        android:background="@color/white"
        android:onClick="onClickListDeadlines"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ListDeadlines"
        app:layout_constraintEnd_toEndOf="@id/ListDeadlines"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Список\nдедлайнов" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ListDeadlines"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/background_spelling" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imageView5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/schedule" />


    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/image_schedule_button"
        android:scaleType="centerInside"
        android:background="@color/suai_light_blue"
        app:layout_constraintTop_toBottomOf="@id/imageView5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:onClick="onClickPairs"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/imageButton3"
        app:layout_constraintStart_toStartOf="@id/imageButton3"
        app:layout_constraintEnd_toEndOf="@id/imageButton3"
        android:text="Занятия"
        android:textSize="15sp"
        android:textColor="@color/black"
        />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:scaleType="centerInside"
        android:background="@color/suai_light_blue"
        app:srcCompat="@drawable/image_exams_button"
        android:onClick="onClickTest"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/imageButton4"
        app:layout_constraintStart_toStartOf="@id/imageButton4"
        app:layout_constraintEnd_toEndOf="@id/imageButton4"
        android:text="Сессия"
        android:textSize="15sp"
        android:textColor="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>


