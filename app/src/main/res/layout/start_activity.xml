<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/navigation"
            android:textColor="@color/suai_dark_blue"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Navigation">

        <ImageView
            android:id="@+id/Ellipse"
            android:layout_width="90dp"
            android:layout_height="115dp"
            app:srcCompat="@drawable/ellipse"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/CurrentDateDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="@+id/Ellipse"
            android:text="@string/currentDateDay"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CurrentDateMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currentDateMonth"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/CurrentDateDay"
            android:layout_centerHorizontal="@+id/CurrentDateDay"/>

        <TextView
            android:id="@+id/CurrentDayOfWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currentDayOfWeek"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_below="@+id/CurrentDateMonth"
            android:layout_centerHorizontal="@+id/CurrentDateDay"/>

        <TextView
            android:id="@+id/Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/number"
            android:textColor="@color/purple_500"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lesson"
            android:textColor="@color/purple_500"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Number" />

        <ImageView
            android:id="@+id/Blue_triangle"
            android:layout_width="90dp"
            android:layout_height="115sp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/blue_triangle" />

        <TextView
            android:id="@+id/LowerWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginVertical="30dp"
            android:text="@string/lowerWeek"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:text="@string/week"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>


